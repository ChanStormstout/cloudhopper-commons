<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>cloudhopper</groupId>
  <artifactId>ch-httpclient-util</artifactId>
  <packaging>jar</packaging>
  <version>1.4</version>
  <name>Cloudhopper HttpClient 4.x Utility library</name>

  <parent>
    <groupId>cloudhopper</groupId>
    <artifactId>ch-maven-parent-internal</artifactId>
    <version>1.0</version>
  </parent>

  <repositories>
    <repository>
      <id>cloudhopper-internal</id>
      <name>Cloudhopper Internal Maven Repository</name>
      <layout>default</layout>
      <url>https://maven.cloudhopper.lan/repos/internal</url>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <groupId>com.mycila.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <!-- compile scope -->
    <dependency>
      <groupId>apache</groupId>
      <artifactId>httpcore</artifactId>
      <version>${commons-httpclient.version}</version>
    </dependency>
    <dependency>
      <groupId>apache</groupId>
      <artifactId>httpclient</artifactId>
      <version>${commons-httpclient.version}</version>
    </dependency>
    <!-- provided scope -->
    <dependency>
      <groupId>apache</groupId>
      <artifactId>log4j</artifactId>
      <version>${log4j.version}</version>
      <scope>provided</scope>
    </dependency>
    <!-- runtime scope -->
    <dependency>
      <groupId>apache</groupId>
      <artifactId>commons-collections</artifactId>
      <version>${commons-collections.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>apache</groupId>
      <artifactId>commons-logging</artifactId>
      <version>${commons-logging.version}</version>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>apache</groupId>
      <artifactId>commons-codec</artifactId>
      <version>${commons-codec.version}</version>
      <scope>runtime</scope>
    </dependency>
    <!-- testing scope -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>sun</groupId>
      <artifactId>grizzly-webserver</artifactId>
      <version>${grizzly-webserver.version}</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <properties>
    <commons-httpclient.version>[4.0.1,)</commons-httpclient.version>
    <commons-collections.version>[3.2,)</commons-collections.version>
    <commons-logging.version>[1.1,)</commons-logging.version>
    <commons-codec.version>[1.3,)</commons-codec.version>
    <grizzly-webserver.version>1.9.18</grizzly-webserver.version>
  </properties>

</project>

