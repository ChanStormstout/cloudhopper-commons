<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>cloudhopper</groupId>
  <artifactId>ch-commons-sql</artifactId>
  <packaging>jar</packaging>
  <version>1.1.0-SNAPSHOT</version>
  <name>ch-commons-sql</name>

  <parent>
    <groupId>cloudhopper</groupId>
    <artifactId>ch-maven-parent-public</artifactId>
    <version>1.5</version>
  </parent>

  <repositories>
    <repository>
      <id>cloudhopper-public</id>
      <name>Cloudhopper Public Maven Repository</name>
      <layout>default</layout>
      <url>http://maven.cloudhopper.com/repos/third-party</url>
    </repository>
  </repositories>

  <!--
    I prefer jars managed out of the Cloudhopper Maven Repo with more consistent
    versioning.  I apologize for not using more common Maven repos
  -->
  <dependencies>
    <!-- compile scope -->
    <dependency>
      <groupId>slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j.version}</version>
    </dependency>
    <dependency>
        <groupId>cloudhopper</groupId>
        <artifactId>ch-commons-util</artifactId>
        <version>[2.1,)</version>
    </dependency>
    
    <dependency>
        <groupId>c3p0</groupId>
        <artifactId>c3p0</artifactId>
        <version>0.9.1.2</version>
        <scope>provided</scope>
    </dependency>
    <dependency>
        <groupId>proxool</groupId>
        <artifactId>proxool</artifactId>
        <version>[0.9.1,)</version>
        <scope>provided</scope>
    </dependency>

    <!-- testing scope -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>slf4j</groupId>
      <artifactId>log4j-over-slf4j</artifactId>
      <version>${slf4j.version}</version>
    </dependency>
    <dependency>
      <groupId>logback</groupId>
      <artifactId>logback-core</artifactId>
      <version>${logback.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>${logback.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>cloudhopper</groupId>
        <artifactId>ch-commons-xml</artifactId>
        <version>1.0-SNAPSHOT</version>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>cloudhopper</groupId>
        <artifactId>ch-commons-xbean</artifactId>
        <version>1.0-SNAPSHOT</version>
        <scope>test</scope>
    </dependency>
    <dependency>
        <groupId>mysql</groupId>
        <artifactId>mysql-connector</artifactId>
        <version>[5.1,)</version>
        <scope>test</scope>
    </dependency>
  </dependencies>

  <properties>
    <main.java.package>com.cloudhopper.commons.sql</main.java.package>
  </properties>

</project>

