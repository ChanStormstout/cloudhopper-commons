<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>cloudhopper</groupId>
  <artifactId>ch-sxmp</artifactId>
  <packaging>jar</packaging>
  <version>1.4.4</version>
  <name>ch-sxmp</name>

  <parent>
    <groupId>cloudhopper</groupId>
    <artifactId>ch-maven-parent-public</artifactId>
    <version>1.7</version>
  </parent>

  <scm>
    <connection>scm:git:https://git.twitter.biz/cloudhopper-sxmp</connection>
    <tag>version-1.4.4</tag>
  </scm>

  <repositories>
    <repository>
      <id>cloudhopper-public</id>
      <name>Cloudhopper Public Maven Repository</name>
      <layout>default</layout>
      <url>http://maven.cloudhopper.com/repos/third-party</url>
    </repository>
  </repositories>

  <!--
      I prefer jars managed out of the Cloudhopper Maven Repo with more consistent
      versioning.  I apologize for not using more common Maven repos
  -->
  <dependencies>
    <!-- compile scope -->
    <dependency>
      <groupId>slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j.version}</version>
    </dependency>
    <dependency>
      <groupId>cloudhopper</groupId>
      <artifactId>ch-commons-util</artifactId>
      <version>[2.5,)</version>
    </dependency>
    <dependency>
      <groupId>cloudhopper</groupId>
      <artifactId>ch-stratus-commons</artifactId>
      <version>[1.1.1,)</version>
      <exclusions>
        <exclusion>
          <groupId>cloudhopper</groupId>
          <artifactId>ch-commons-gsm</artifactId>
        </exclusion>
        <exclusion>
          <groupId>cloudhopper</groupId>
          <artifactId>ch-mq</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

    <!-- provided scope -->
    <dependency>
      <groupId>slf4j</groupId>
      <artifactId>log4j-over-slf4j</artifactId>
      <version>${slf4j.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>slf4j</groupId>
      <artifactId>jcl-over-slf4j</artifactId>
      <version>${slf4j.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>javax</groupId>
      <artifactId>servlet-api</artifactId>
      <version>2.5</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>apache</groupId>
      <artifactId>httpcore</artifactId>
      <version>[4.0.1,)</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>apache</groupId>
      <artifactId>httpclient</artifactId>
      <version>[4.0,)</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>apache</groupId>
      <artifactId>commons-lang</artifactId>
      <version>[2.4,)</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>apache</groupId>
      <artifactId>commons-collections</artifactId>
      <version>[3.2,)</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>apache</groupId>
      <artifactId>commons-codec</artifactId>
      <version>[1.3,)</version>
      <scope>provided</scope>
    </dependency>

    <!-- runtime scope -->

    <!-- testing scope -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${junit.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>xmlunit</artifactId>
      <version>1.3</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>logback</groupId>
      <artifactId>logback-core</artifactId>
      <version>${logback.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>logback</groupId>
      <artifactId>logback-classic</artifactId>
      <version>${logback.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.json</groupId>
      <artifactId>json</artifactId>
      <version>20090211</version>
      <type>jar</type>
    </dependency>
  </dependencies>

  <properties>
    <main.java.package>com.cloudhopper.sxmp</main.java.package>
  </properties>

</project>

